@model HowToTrainYourDragon.Model.LocationModel.LocationDetails

@{
    ViewBag.Title = "Delete";
}
<body style="background-image: url('../../Images/99322fb324515947b082d96ea2186559.jpg'); background-repeat: no-repeat; background-attachment: fixed; background-size: cover; font-family: Papyrus, fantasy; ">

    <h2>Delete</h2>

    <h3 style="color:white;">Are you sure you want to delete this?</h3>
    <div style="color:white;">
        <h4>LocationDetails</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.LocationId)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.LocationId)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.LocationName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.LocationName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.AlternateName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.AlternateName)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <p>Deleting this location will delete all the Dragons and Humans that has this location has their Foreign Key. Also, in order to delete the location  along with humans and dragons, you have to make sure all the Humans and Dragons Partnerships in the location is deleted. Press Delete if this is what you want.</p>
                <input type="submit" value="Delete" class="btn btn-default" /> |
                @Html.ActionLink("Back to List", "Index", null, new { @style = "color:white;" })
            </div>
        }
    </div>

</body>