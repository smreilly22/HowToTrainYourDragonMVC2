@model HowToTrainYourDragon.Model.PartnershipModel.PartnershipEdit

@{
    ViewBag.Title = "Edit";
}
<body style="background-image: url('../../Images/background5.jpg'); background-repeat: no-repeat; background-attachment: fixed; background-size: cover; background-color: black; color: white; font-family: Papyrus, fantasy;">

    <h2>Edit</h2>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
    
        <div class="form-horizontal">
            <h4>PartnershipEdit</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.PartnershipId)

            <div class="form-group">
                @Html.LabelFor(model => model.HumanRiderId, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("HumanRiderId", null, htmlAttributes: new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.HumanRiderId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.DragonCompanionId, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("DragonCompanionId", null, htmlAttributes: new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DragonCompanionId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.DragonNickName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DragonNickName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DragonNickName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index", null, new {@style = "color: white"})
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }

</body>